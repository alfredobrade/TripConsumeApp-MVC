@model IEnumerable<TripConsumeApp.Models.RefuelingVM>

@{
    ViewData["Title"] = "Refuelings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="conainer p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Recargas de <p class="text-danger font-weight-bold">@Model.First().VehicleName</p> </h2>

        </div>
        @*<div class="col-6 text-end">
        <a asp-controller="Refueling" asp-action="NewRefueling" class="btn btn-primary"> Nueva Recarga</a>
        </div>*@

    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Distancia recorrida</th>
                    <th>Litros Cargados</th>
                    <th>Monto</th>
                    <th>Fecha</th>
                    <th>Lts/100km</th>
                    <th>Km/Lts</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th width="10%">@item.Kilometers Km</th>
                        <th width="10%">@item.Liters Lts</th>
                        <th width="10%">$ @item.Amount</th>
                        <th width="15%">@item.DateTime</th>
                        <th width="7%">@item.Liters100Km</th>
                        <th width="7%">@item.KmPerLiter.ToString()</th>

                        <th width="30%" class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Refueling" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-primary mx-2">
                                    Editar
                                </a>
                                <a asp-controller="Refueling" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-2">
                                    Eliminar
                                </a>
                            </div>


                        </th>
                    </tr>
                    <tr>
                        <td colspan="6">
                            @if (item.Comments == null)
                            {
                                <p>No Comments</p>
                            }
                            else
                            {
                                <p>
                                    <b>@item.Comments</b>
                                </p>

                            }
                        </td>

                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No hay elementos</p>
    }

</div>
